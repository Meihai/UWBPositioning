<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:layout_marginTop="0dip"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:background="@color/lightblue"
        android:textColor="@color/white"
        android:text="Factory"
        android:id="@+id/scene_mode"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:gravity="center_horizontal"
        android:layout_marginTop="55dip"
        android:layout_marginBottom="5dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dip"
            android:text="定位算法选择:"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            />
        <Spinner android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="0dip"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:theme="@style/spinnerStyle"
            android:overlapAnchor="false"
            android:id="@+id/algorithm_spinner"
            android:entries="@array/sping_algorithm_arr"
            />
    </LinearLayout>
     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="85dip"
        android:layout_marginBottom="5dip"
         android:gravity="left"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基站名称:"
            android:textColor="@color/text_color"
            android:layout_marginLeft="0dip"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/edit_bsname"
            android:layout_width="161dip"
            android:layout_height="24dip"
            android:gravity="center"
            android:background="@drawable/corner_lightblue"
            android:inputType="number"
            android:hint="基站id"
            android:textSize="16sp"
            android:layout_marginLeft="5dip"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_gray"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:gravity="left"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X:"
            android:textColor="@color/text_color"
            android:layout_marginLeft="0dip"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/edit_x"
            android:layout_width="70dip"
            android:layout_height="24dip"
            android:gravity="center"
            android:background="@drawable/corner_lightblue"
            android:inputType="numberSigned"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:textSize="16sp"
            android:hint="X坐标"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y:"
            android:textColor="@color/text_color"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="0dip"
            android:textSize="16sp"
           />
        <EditText
            android:id="@+id/edit_y"
            android:layout_width="70dip"
            android:layout_height="24dip"
            android:gravity="center"
            android:background="@drawable/corner_lightblue"
            android:inputType="numberSigned"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:textSize="16sp"
            android:hint="Y坐标"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_gray"/>
           />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z:"
            android:textColor="@color/text_color"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="0dip"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edit_z"
            android:layout_width="70dip"
            android:layout_height="24dip"
            android:gravity="center"
            android:background="@drawable/corner_lightblue"
            android:inputType="numberSigned"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:textSize="16sp"
            android:hint="Z坐标"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_gray"/>
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="155dip"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_addbs"
            android:layout_width="140dip"
            android:layout_height="36dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:textSize="16sp"
            android:layout_weight="1"
            android:background="@color/lightblue"
            android:textColor="@color/text_color"
            android:text="添加基站"
          />

        <Button
            android:id="@+id/btn_deletebs"
            android:layout_width="140dip"
            android:layout_height="36dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="0dip"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textColor="@color/text_color"
            android:background="@color/lightblue"
            android:text="删除基站" />
    </LinearLayout>

    <ListView
        android:id="@+id/bslv"
        android:layout_marginTop="205dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dip"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp">
    </ListView>

</RelativeLayout>
